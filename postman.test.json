{
  "info": {
    "name": "Favorite Properties API",
    "_postman_id": "7f0f3b1e-0b2a-4e0b-91a2-6f7cfavprops001",
    "description": "Favorites feature: add, toggle, list, check, remove.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Favorites",
      "item": [
        {
          "name": "Add to Favorites",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"propertyId\": 101,\n  \"note\": \"Shortlist â€“ sea view\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/favorites",
              "host": ["{{baseUrl}}"],
              "path": ["favorites"]
            },
            "description": "Add a property to the authenticated user's favorites. Admins may add on behalf of a user by passing ?userId=..."
          },
          "response": []
        },
        {
          "name": "Toggle Favorite (on/off)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/favorites/:propertyId/toggle",
              "host": ["{{baseUrl}}"],
              "path": ["favorites", ":propertyId", "toggle"],
              "variable": [
                { "key": "propertyId", "value": "101" }
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "",
                  "description": "Optional (ADMIN/QUALITY) perform for specific user"
                }
              ]
            },
            "description": "Toggles a favorite for the given property ID. Creates if missing; soft-deletes if exists."
          },
          "response": []
        },
        {
          "name": "List My Favorites",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/favorites?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["favorites"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" },
                {
                  "key": "userId",
                  "value": "",
                  "description": "Optional (ADMIN/QUALITY) list favorites of a specific user"
                }
              ]
            },
            "description": "Paginated list of favorites for the current user. Admin/Quality can pass userId."
          },
          "response": []
        },
        {
          "name": "Check if Favorite",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/favorites/:propertyId/is-favorite",
              "host": ["{{baseUrl}}"],
              "path": ["favorites", ":propertyId", "is-favorite"],
              "variable": [
                { "key": "propertyId", "value": "101" }
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "",
                  "description": "Optional (ADMIN/QUALITY) check for a specific user"
                }
              ]
            },
            "description": "Returns { favorite: true|false } for the given property."
          },
          "response": []
        },
        {
          "name": "Remove from Favorites",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/favorites/:propertyId",
              "host": ["{{baseUrl}}"],
              "path": ["favorites", ":propertyId"],
              "variable": [
                { "key": "propertyId", "value": "101" }
              ],
              "query": [
                {
                  "key": "userId",
                  "value": "",
                  "description": "Optional (ADMIN/QUALITY) remove for a specific user"
                }
              ]
            },
            "description": "Soft-deletes the favorite record for the property."
          },
          "response": []
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ]
}
